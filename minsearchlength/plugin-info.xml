<?xml version="1.0" standalone="yes" ?>
<plugin id="CerealGuy:MinSearchLength">
	<name>MinSearchLength</name>
	<author>CerealGuy</author>
	<description>Set minimal length of letters a word needs to search for</description>
	<version>1.0</version>
	<settings>
		<setting name="minsearchlength" default="1" />
	</settings>
	<settings-page area="minsearchlength">
		<language file="MinSearchLength" />
		<int name="minsearchlength" />
	</settings-page>
	<acp-url>action=admin;area=minsearchlength</acp-url>
</plugin>
